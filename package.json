{
  "name": "type",
  "version": "1.0.0",
  "description": "A type checking javascript library.",
  "repository": "https://github.com/juliendargelos/type",
  "author": "Julien Dargelos",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build": "yarn build:node & yarn build:browser",
    "build:node": "parcel build src/index.js -t node --no-cache",
    "build:browser": "parcel build src/index.js -t browser -o browser.js --no-cache",
    "docs": "rm -R docs/* | jsdoc src README.md -r -d docs -t node_modules/minami -e utf8 -c ./jsdoc/configuration.json",
    "docs:watch": "watch 'yarn docs' src jsdoc",
    "docs:serve": "yarn docs:watch & serve docs",
    "lint": "eslint src",
    "test": "jest",
    "test:report": ". .env && cc-test-reporter before-build && if yarn test; then cc-test-reporter after-build; fi",
    "githooks:link": "ln -f .githooks/* .git/hooks && chmod +x .git/hooks/*"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "transform-glob-import",
      ["module-resolver", {"alias": {"~": "./src"}}]
    ]
  },
  "jest": {
    "roots": ["src", "test"],
    "testMatch": ["<rootDir>/test/**/*"],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*",
      "!<rootDir>/src/types/(boolean|nan|null|undefined).js"
    ],
    "coverageReporters": ["lcov"],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "globals": {"require": false},
    "rules": {
      "semi": ["error", "never"],
      "complexity": ["error", 7],
      "no-multi-spaces": ["error"],
      "brace-style": ["error"],
      "max-len": ["error", {"code": 90, "ignoreComments": true}],
      "max-depth": ["error", 4],
      "max-lines": ["error", 300],
      "max-lines-per-function": ["error", 50],
      "max-nested-callbacks": ["error", 4],
      "max-statements": ["error", 10],
      "max-params": ["error", 4]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/preset-env": "^7.3.1",
    "babel-eslint": "^10.0.1",
    "babel-plugin-module-resolver": "^3.1.3",
    "babel-plugin-transform-glob-import": "^1.0.1",
    "eslint": "^5.12.1",
    "jest": "^24.0.0",
    "jsdoc": "^3.5.5",
    "minami": "^1.2.3",
    "parcel": "^1.11.0",
    "serve": "^10.1.1",
    "watch": "^1.0.2"
  }
}
